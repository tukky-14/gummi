<div class="user">
  <h2> - ユーザー情報の編集 - </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "user__input" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "user__input" %>
    </div>

    <div class="field">
      <%= f.label :like, "好きなグミ" %><br />
      <%= f.text_field :like, autofocus: true, autocomplete: "like", class: "user__input" %>
    </div>

    <div class="field">
      <%= f.label :image, "プロフィール画像" %><br />
      <%= f.file_field :image, autofocus: true, autocomplete: "image", class: "user__input" %>
    </div>
    <div class="field">
      <%= f.label :introduction, "自己紹介" %><br />
      <%= f.text_area :introduction, rows: "5", autofocus: true, autocomplete: "introduction", class: "user__input-area" %>
    </div>

    <div class="field">
      <strong>
      <%= f.label :current_password, "※現在のパスワード(変更するために必要です)※" %><br />
      </strong>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "user__input" %>
    </div> 

    <div class="actions">
      <%= f.submit "更新", class: "user__btn" %>
    </div>
  <% end %>

  <%= link_to "マイページに戻る", :back %>
</div>
