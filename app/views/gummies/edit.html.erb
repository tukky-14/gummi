<div class="wrapper">
  <div class="form">
    <h4>食べたグミを編集しよう！</h4>
    <%= form_with model: @gummy do |f| %>
      <%# <%= f.label :product, "商品" %>
      <%= f.text_field :product, placeholder: "商品名", class: "form__input" %>
      <%= f.text_field :maker, placeholder: "メーカー", class: "form__input" %>
      <%= f.file_field :image, placeholder: "画像", class: "form__input" %>
      <%= f.text_area :content, rows: "10", placeholder: "レビュー", class: "form__area" %>
      <%= f.submit "送信", class: "form__btn" %>
    <% end %>
    <% if user_signed_in? && current_user.id == @gummy.user_id %>
        <p class="form__menu">
          <%= link_to root_path do %>
            <i class="far fa-list-alt icon"></i>
          <% end %>
          <%= link_to gummy_path(@gummy), method: :delete, data: {confirm: "削除してもよろしいですか？"} do %>
            <i class="fas fa-trash-alt icon"></i>
          <% end %>
        </p>
      <% end %>
  </div>
</div>