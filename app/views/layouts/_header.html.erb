<header>
  <div class="header">
    <h1 class="header__title"><%= link_to "Logumi", root_path %></h1>
    <% if user_signed_in? %>
      <ul class="header__list">
        <li class="header__list__name"><%= current_user.name %></li>
        <%= link_to  user_path(current_user.id), method: :get do %>
          <li class="header__list__select">マイページ</li>
        <% end %>
        <%= link_to  new_gummy_path, method: :get do %>
          <li class="header__list__select">投稿する</li>
        <% end %>
        <li class="header__list__logout">
        <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "ログアウトしますか？" } do %>
          <i class="fas fa-sign-out-alt"></i>
        <% end %>
        </li>
    <% else %>  
      <ul class="header__list">
        <%= link_to  new_user_session_path, method: :get do %>
          <li class="header__list__select">ログイン</li>
        <% end %>
        <%= link_to  new_user_registration_path, method: :get do %>
          <li class="header__list__select">新規登録</li>
        <% end %>
      </ul>
    <% end %>
  <div class="header__toggle">
    <span></span>
    <span></span>
    <span></span>
  </div>
  </div>
</header>